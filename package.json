{
  "name": "postcss-load-config",
  "version": "4.0.2",
  "description": "Autoload Config for PostCSS",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "files": [
    "src"
  ],
  "engines": {
    "node": ">= 18"
  },
  "scripts": {
    "lint": "standard",
    "test": "pnpm lint && c8 pnpm unit",
    "unit": "uvu . '\\.test\\.js$'",
    "docs": "jsdoc2md src/*.js > DOCS.md",
    "clean": "npx rimraf ./coverage",
    "release": "standard-version"
  },
  "funding": [
    {
      "type": "opencollective",
      "url": "https://opencollective.com/postcss/"
    },
    {
      "type": "github",
      "url": "https://github.com/sponsors/ai"
    }
  ],
  "dependencies": {
    "lilconfig": "^3.0.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/postcss-import": "^14.0.3",
    "c8": "^8.0.1",
    "clean-publish": "^4.2.0",
    "cssnano": "^6.0.1",
    "jiti": "^1.21.0",
    "jsdoc-to-markdown": "^8.0.0",
    "postcss": "^8.4.31",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.1",
    "standard": "^17.1.0",
    "sugarss": "^4.0.1",
    "typescript": "5.3.2",
    "uvu": "^0.5.6"
  },
  "peerDependencies": {
    "jiti": ">=1.21.0",
    "postcss": ">=8.0.9"
  },
  "peerDependenciesMeta": {
    "jiti": {
      "optional": true
    },
    "postcss": {
      "optional": true
    }
  },
  "c8": {
    "exclude": [
      "test/**/*"
    ],
    "lines": 100,
    "check-coverage": true
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "keywords": [
    "postcss",
    "postcssrc",
    "postcss.config.js"
  ],
  "author": "Michael Ciniawky <michael.ciniawsky@gmail.com>",
  "contributors": [
    "Ryan Dunckel",
    "Mateusz Derks",
    "Dalton Santos",
    "Patrick Gilday",
    "Fran√ßois Wouts"
  ],
  "repository": "postcss/postcss-load-config",
  "license": "MIT"
}
