{
  "name": "postcss-load-config",
  "version": "5.0.3",
  "description": "Autoload Config for PostCSS",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "files": [
    "src"
  ],
  "engines": {
    "node": ">= 18"
  },
  "scripts": {
    "test:lint": "eslint .",
    "test:converage": "c8 pnpm unit",
    "test": "pnpm run /^test:/",
    "unit": "node --test test/*.test.js",
    "docs": "jsdoc2md src/*.js > DOCS.md",
    "clean": "npx rimraf ./coverage"
  },
  "funding": [
    {
      "type": "opencollective",
      "url": "https://opencollective.com/postcss/"
    },
    {
      "type": "github",
      "url": "https://github.com/sponsors/ai"
    }
  ],
  "dependencies": {
    "lilconfig": "^3.1.1",
    "yaml": "^2.4.1"
  },
  "devDependencies": {
    "@logux/eslint-config": "^53.0.1",
    "@types/node": "^20.12.7",
    "@types/postcss-import": "^14.0.3",
    "c8": "^9.1.0",
    "clean-publish": "^4.4.0",
    "cssnano": "^6.1.2",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.2.1",
    "eslint-plugin-node-import": "^1.0.4",
    "eslint-plugin-perfectionist": "^2.9.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "jiti": "^1.21.0",
    "jsdoc-to-markdown": "^8.0.1",
    "postcss": "^8.4.38",
    "postcss-import": "^16.1.0",
    "postcss-nested": "^6.0.1",
    "sugarss": "^4.0.1",
    "tsx": "^4.8.2",
    "typescript": "5.4.5"
  },
  "peerDependencies": {
    "jiti": ">=1.21.0",
    "postcss": ">=8.0.9",
    "tsx": "^4.8.1"
  },
  "peerDependenciesMeta": {
    "jiti": {
      "optional": true
    },
    "postcss": {
      "optional": true
    },
    "tsx": {
      "optional": true
    }
  },
  "c8": {
    "exclude": [
      "test/**/*"
    ],
    "lines": 100,
    "check-coverage": true,
    "reporter": [
      "text",
      "lcov"
    ],
    "skip-full": true,
    "clean": true
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "keywords": [
    "postcss",
    "postcssrc",
    "postcss.config.js"
  ],
  "author": "Michael Ciniawky <michael.ciniawsky@gmail.com>",
  "contributors": [
    "Ryan Dunckel",
    "Mateusz Derks",
    "Dalton Santos",
    "Patrick Gilday",
    "Fran√ßois Wouts"
  ],
  "repository": "postcss/postcss-load-config",
  "license": "MIT"
}
